---
const { id, dataTitle } = Astro.props;
---

<section id={id} data-title={dataTitle} class="min-h-screen flex items-center bg-gradient-to-br from-gray-900 via-slate-900 to-gray-900 relative overflow-hidden py-20 pt-32 md:pt-20">

    <div class="container mx-auto px-6 lg:pl-40 lg:pr-10">
        <div class="flex flex-col md:flex-row items-center justify-between gap-12">
            <div class="flex-1 space-y-8 text-left">
                <div class="space-y-8">
                    <h1 class="text-5xl lg:text-6xl font-bold text-white leading-tight">
                        Hello
                        <span class="bg-gradient-to-r from-blue-400 via-purple-500 to-blue-500 bg-clip-text text-transparent">.</span>
                    </h1>

                    <div class="flex items-center space-x-4 md:px-10">
                        <div class="h-0.5 w-20 bg-gradient-to-r from-blue-400 via-purple-500 to-blue-500"></div>
                        <h2 class="font-semibold text-2xl lg:text-3xl text-gray-300">
                            I'm Viduni
                        </h2>
                    </div>

                    <div class="flex items-center justify-between">
                        <h1 class="text-4xl lg:text-6xl font-bold text-white">
                            Software Developer
                        </h1>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-6 pt-10">
                        <a href="/public#contactMe">
                            <button class="px-8 py-3 bg-gradient-to-r from-purple-600 to-blue-500 text-white font-semibold hover:opacity-90 transition duration-300 w-full sm:w-auto">
                                Contact Me
                            </button>
                        </a>

                        <a href="/Resume.pdf" download="Resume.pdf" class="px-8 py-3 border-2 border-gray-400 text-gray-300 font-semibold hover:border-purple-500 hover:text-purple-500 transition-colors duration-300 flex items-center justify-center gap-2 w-full sm:w-auto">
                            My Resume
                            <svg class="w-5 h-5" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <div class="flex-1 flex justify-center md:justify-end relative mt-10 md:mt-0">
                <div class="relative">
                    <img src="/Profile.png" alt="Profile" class="w-100 h-100 sm:w-90 sm:h-90 md:w-[85vh] md:h-[85vh] lg:w-[90vh] lg:h-[90vh] object-cover rounded-full relative z-10">
                </div>
            </div>
        </div>
    </div>
</section>