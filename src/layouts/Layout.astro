---
const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png">
    <style>
        html {
            scroll-padding-top: 20px;
        }
    </style>
</head>
<body class="bg-black text-gray-800 scroll-smooth min-h-screen flex flex-col">

<div class="fixed top-0 left-0 right-0 z-50 sm:mb-14">
    <Header />
</div>

<main class="overflow-y-auto flex-grow sm:pt-10 md:pt-0 lg:pt-0 lg:pb-0 md:pb-0 sm:mb-100 mb-0">
    <slot />
</main>

<Footer />

</body>
</html>
