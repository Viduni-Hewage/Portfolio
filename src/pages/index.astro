---
import Layout from '../layouts/Layout.astro';
import Home from '../components/Home.astro';
import AboutMe from '../components/AboutMe.astro';
import Skills from "./skills.astro";
import ContactMe from '../components/ContactMe.astro';
import '../styles/global.css';
import IndexProject from "./projects/indexProject.astro";
import Experiences from "../components/Experiences.astro";
---

<Layout title="Viduni Hewage | Portfolio">
    <Home id="home" dataTitle="Home - Viduni Hewage | Portfolio"  />
    <AboutMe id="aboutMe" dataTitle="About Me - Viduni Hewage | Portfolio" />
    <Skills id="skills" dataTitle="Skills - Viduni Hewage | Portfolio" />
    <Experiences id="experiences" dataTitle="Experiences - Viduni Hewage | Portfolio"  />
    <IndexProject id="projectsPreview" dataTitle="Projects - Viduni Hewage | Portfolio" />
    <ContactMe id="contactMe" dataTitle="Contact Me - Viduni Hewage | Portfolio" />
</Layout>

<script>
    document.addEventListener('scroll', () => {
        const sections = document.querySelectorAll('section[id]') as NodeListOf<HTMLElement>;
        const scrollPos = window.scrollY + window.innerHeight / 2;

        sections.forEach(section => {
            const top = section.offsetTop;
            const height = section.offsetHeight;
            const title = section.dataset.title;

            if (scrollPos >= top && scrollPos < top + height) {
                document.title = title ?? "Portfolio";
            }
        });
    });

</script>
